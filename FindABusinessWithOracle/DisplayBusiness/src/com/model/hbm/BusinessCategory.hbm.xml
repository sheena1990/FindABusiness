<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.model.entity.BusinessCategory" table="BUSINESS_CATEGORY">
      <meta attribute="class-description">
         This class contains the business categories. 
      </meta>
      <id name="businessCategoryId" type="string" column="bc_id"/>
      <property name="businessCategoryName" column="bc_name" type="string"/>
   </class>
</hibernate-mapping>